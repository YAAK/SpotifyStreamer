<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/list_item_padding_top</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_bottom</item>
    </style>

    <style name="ListItemImage">
        <item name="android:layout_width">@dimen/list_item_image_width</item>
        <item name="android:layout_height">@dimen/list_item_image_height</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ListItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/list_item_text_padding_left</item>
        <item name="android:paddingRight">@dimen/list_item_text_padding_right</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
    </style>

</resources>
